{
    "compilerOptions": {
        "types": ["bun-types"],
        "esModuleInterop": true,
        "removeComments": false,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "emitDeclarationOnly": true,
        "declaration": true,
        "allowUmdGlobalAccess": true,
        "outDir": "types",
    },
    "include": ["src", "global.d.ts"]
}