{
    "compilerOptions": {
        "types": ["bun-types"],
        "esModuleInterop": true,
        "removeComments": false,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "WebWorker",
            "WebWorker.ImportScripts",
            "Webworker.Iterable"
        ],
        "emitDeclarationOnly": true,
        "declaration": true,
        "outDir": "types",
        "typeRoots": [".", "node_modules"],
    },
    "include": ["src"]
}